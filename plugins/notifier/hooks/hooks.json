{
  "hooks": {
    "PreToolUse": [],
    "PostToolUse": [],
    "SessionStart": [],
    "Stop": [],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/plugins/marketplaces/claude-buddy-marketplace/plugins/notifier/hooks/notification.py --notify "
          }
        ]
      }
    ],
    "SubagentStop": [],
    "PreCompact": []
  },
  "config": {
    "notifier": {
      "enabled": true,
      "file_operations": {
        "enabled": true,
        "notify_on_write": true,
        "notify_on_edit": true,
        "notify_on_multi_edit": true
      },
      "command_execution": {
        "enabled": true,
        "notify_on_success": true,
        "notify_on_failure": true
      },
      "session_events": {
        "enabled": true,
        "notify_on_start": true,
        "notify_on_stop": true
      },
      "error_events": {
        "enabled": true,
        "notify_on_tool_error": true,
        "notify_on_validation_error": true
      },
      "logging": {
        "enabled": true,
        "log_file": "$HOME/.claude/logs/notifier.log",
        "log_level": "info"
      }
    }
  }
}
